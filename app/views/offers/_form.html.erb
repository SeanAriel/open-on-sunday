<%= form_for offer, :html => {class: 'form-group'}  do |f| %>


<div class="row">
<div class="text-center">
  <div class="col-sm-1 col-sm-offset-4">
<%= f.label :name, class:'label label-primary' %>
</div>
<div class="col-sm-3">
    <%= f.text_field :name, class: 'form-control' %>
  </div>
</div>
</div>
<p></p>
<div class="row">

  <div class="col-sm-1 col-sm-offset-4">
  <%= f.label :description, class:'label label-primary'  %>
</div>
<div class="col-sm-3">

  <%= f.text_area :description, class: 'form-control' %>
  </div>
</div>
<p></p>
<div class="row">


  <div class="col-sm-1 col-sm-offset-4">
        <%= f.label :price, class:'label label-primary'  %>
      </div>
      <div class="col-sm-3">

      <%= f.number_field :price, in: 1.0..200000000.0, step: 0.01, class: 'form-control' %>
</div>
</div>
  <p></p>
<div class="row">


  <div class="col-sm-1 col-sm-offset-4">
      <%= f.label :category , class:'label label-primary' %>
    </div>
    <div class="col-sm-3">

      <%= f.collection_select(:category_id,Category.all, :id, :name, class: 'form-control')%>
  </div>
</div>
<p></p>
<div class="row">

  <div class="col-sm-1 col-sm-offset-4">
      <%= f.label :Location , class:'label label-primary' %>
    </div>
    <div class="col-sm-3">

      <%= f.text_field :city, class: 'form-control' %>
</div>
</div>
<div class="row">

<div class="col-sm-1 col-sm-offset-4">
  <h2 class="label label-primary"> Picture </h2>
  <p class="text-center">

<%= f.file_field :photo %>
</div>
<div class="col-sm-3">

<%= f.hidden_field :photo_cache %>
</p>
</div>
</div>
<p></p>
<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <div class='jumbotron'>
      <%# @offer.latitude = markers[0].geometry.location.lat %>
      <%# @offer.longitude = markers[0].geometry.location.lng %>

      <div class="actions">
        <%=  f.submit 'submit', :class => 'btn btn-primary' %>
      </div>
      <% end %>
    </div>
  </div>

</div>
