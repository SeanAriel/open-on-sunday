<div class="banner-dashboard">

    <div class="profile">
      <%#= cl_image_tag @user.photo, class: avatar-large, crop: :fill unless @offer.photo.url.nil?%>
      <div>
        <h1> Hello <%= @user.first_name%>, Welcome to your Dashboard. </h1>
      </div>
    </div>
    <div class="tabs">
      <a class="tab active" href="#" data-target="#offers" role="tab" data-toggle="tab" aria-expanded="true">
        <p>Current offers</p>
      </a>
      <a class="tab" href="#" data-target="#reviews" role="tab" data-toggle="tab" aria-expanded="true">
        <p>Reviews</p>
      </a>
      <a class="tab" href="#" data-target="#upcoming-meeting" role="tab" data-toggle="tab" aria-expanded="true">
        <p>Your Meetings (you made)</p>
      </a>
      <a class="tab" href="#" data-target="#successful-meetings" role="tab" data-toggle="tab" aria-expanded="true">
        <p>Your Bookings (people booked)</p>
      </a>
    </div>


    <div class="tab-content" id="offers">
      <%= render 'offers', offer: @offers %>
    </div>


    <div class="tab-content hidden" id="reviews">aaaaaaaa
    </div>

    <div class="tab-content hidden" id="upcoming-meeting">
      <%= render 'meetings', offer: @meetings %>
    </div>

    <div class="tab-content hidden" id="successful-meetings">
      <%= render 'bookings', offer: @bookings %>
    </div>
</div>
