
<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to offers_path do %>
      <div class="container-fluid">
        <div class="card label-danger">
          <div class="card-header"><%= booking.offer.name %></div>
          <div class="card-text">
            <p style="word-wrap:break-word"><%= booking.offer.description %></p>
          </div>
          <div class="card-footer text-muted">
          <%= booking.offer.price %> EUR
  </div>
  <div class="inline" >
        <% if booking.status == "Requested to Issuer"%>
        <%= link_to 'Confirm This Meeting', confirm_dashboard_meeting_path(booking), method: :patch, class: "btn btn-primary btn-mini" %>
        <% end %>

        <% if booking.status == "Requested to Issuer"%>
        <%= link_to 'Decline This Meeting', decline_dashboard_meeting_path(booking), method: :patch, data: { confirm: "sure you wanna do that Bro?" }, class: "btn btn-large" %>
        <% end %>
      </div>

      </div>
        </div>
      <% end %>
</div>
      <% end %>
</div>
</div>



